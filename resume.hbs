<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="https://www.fenghan.link/_next/image?url=%2F_next%2Fstatic%2Fmedia%2Flogo.aec76b24.png&w=48&q=75" type="image/svg+xml">
    <title>{{#resume.basics}}{{name}}{{/resume.basics}} - {{locales.resume}}</title>
    <script src="https://code.iconify.design/1/1.0.6/iconify.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+SC|Nunito+Sans:400,700&display=swap" rel="stylesheet">
    <style>{{{css}}}</style>
  </head>

  <body itemscope itemtype="http://schema.org/Person">

    <div class="container">
      <section class="row">
        <div class="card-wrapper">
          {{#resume.basics}}
          <div class="card">
            <div class="profile-card">
                <!--<div class="profile-pic">
                  <img class="media-object img-circle center-block"  data-src="holder.js/100x100"
                    alt="{{name}}" src="{{picture}}" itemprop="image">
                </div>
                -->
                <div class="contact-details">
                  <div class="name-and-profession">
                    <h3 class="text-bolder name" itemprop="name"> {{name}}</h3>
                    <div class="text-muted job" itemprop="jobTitle">{{label}}</div>
                  </div>

                  {{#if email}}
                    <div class="detail">
                      <span class="info">
                        <a href="mailto:{{email}}" class="link-disguise" itemprop="email" target="_blank">{{email}}</a>
                      </span>
                    </div>
                  {{/if}}

                  {{#if phone}}
                    <div class="detail">
                      <a href="tel://{{phone}}" class="link-disguise info" itemprop="telephone" target="_blank">
                        {{phone}}
                      </a>
                    </div>
                  {{/if}}

                  {{#if location}}
                    <div class="detail">
                      {{#location}}
                        <span class="info">
                          {{city}}{{#if region}}{{locales.comma}}{{region}}{{/if}}
                          {{#if countryCode}}{{locales.comma}}{{countryCode}}{{/if}}
                        </span>
                      {{/location}}
                    </div>
                  {{/if}}
                </div>

              <div class="social-links">
                {{#profiles}}
                  <a class="social-link icon" href="{{url}}" target="_blank">
                    <span class="iconify" data-icon="{{toSocialIcon network}}"></span>
                    <!--<span class="social-link-text print-only">{{username}}</span>-->
                  </a>
                {{/profiles}}
              </div>
            </div>
          </div>
          {{/resume.basics}}

        </div>
      </section>

      <section class="row page">
        <div class="card-wrapper">
          <div class="card background-card">

            <h4 id="about"></span> <span class="title">{{locales.about}}</span></h4>
            <div class="card-nested" itemprop="description">
              <p> {{breaklines resume.basics.summary}} </p>
            </div>

            <h4> <span class="title">{{locales.workExperience}}</span></h4>
            <ul class="list-unstyled">
              {{#each resume.work}}
                <li class="card-nested relax">
                  <div class="content has-sidebar">
                    <p class="clear-margin-sm">
                      <strong>{{#if website}}<a href="{{website}}" target="_blank">{{company}}</a>{{else}}{{company}}{{/if}}</strong>
                      <span class="text-muted" style="margin-left: 0.3em">{{position}}</span>
                    </p>
                    <p class="text-muted">
                      <small>
                        <span class="space-right"> {{startDate}} - {{#if endDate}}{{endDate}}{{else}}{{locales.present}}{{/if}} | {{location}}</span>
                      </small>
                    </p>
                    <p>{{summary}}</p>
                    {{#if highlights}}
                      <ul class='highlight'>
                        {{#each highlights}}
                          <li> {{.}} </li>
                        {{/each}}
                      </ul>
                    {{/if}}
                  </div>

                </li>
              {{/each}}
            </ul>

            <h4 id="skills"><span class="title">{{locales.stacks}}</span> </h4>
            <div class="card-nested" itemprop="description">
              <div class="skill-table">
                {{#each resume.skills}}
                    <div class='name'>{{name}}</div>
                    <div>{{join keywords}}</div>
                {{/each}}
              </div>
            </div>
            <div class='px10'></div>

            <h4><span class="title">{{locales.education}}</span></h4>
            <ul class="list-unstyled">
              {{#each resume.education}}
                <li class="card-nested">
                  <div class="content has-sidebar">
                    <p class="clear-margin-sm">
                      <strong>{{#if area}} {{area}}，{{/if}}{{studyType}}</strong>，
                      {{institution}}
                    </p>
                    <p class="text-muted clear-margin-sm">
                      <small>
                        {{startDate}} - {{#if endDate}} {{endDate}} {{else}} Currently Pursuing {{/if}}
                      </small>
                    </p>
                    <div>{{description}}</div>
                    <i>{{gpa}}</i>
                    <div class="space-top labels">
                      {{#courses}} <span class="label label-keyword">{{.}}</span> {{/courses}}
                    </div>
                  </div>
                </li>
              {{/each}}
            </ul>

            {{#if resume.languages}}
              <h4 id="languages"><span class="title">{{locales.languages}}</span> </h4>
              <p class="card-nested">
                {{#each resume.languages}}
                  <span class="enumeration"><strong>{{language}}</strong> ({{fluency}})</span>
                {{/each}}
              </p>
            {{/if}}

            {{#if resume.publications}}
            <h4 id="publications"><span class="title">Talks</span> </h4>
            <ul class="list-unstyled">
              {{#each resume.publications}}
                <li class="card-nested" style="margin-bottom: 0.5em">
                  <div class="content has-sidebar">
                    <p class="clear-margin-sm">
                      <strong>{{#if website}}<a href="{{website}}" target="_blank">{{name}}</a>{{else}}{{name}}{{/if}}</strong>,&nbsp;
                      {{publisher}}
                    </p>
                    <p class="text-muted clear-margin-sm">
                      <small> {{releaseDate}} {{dateNote}}</small>
                      <small>{{#if slides}},&nbsp;<a href="{{slides}}" target="_blank">Slides</a>{{/if}}</small>
                    </p>
                    <p class="clear-margin">{{summary}}</p>
                  </div>
                </li>
              {{/each}}
            </ul>
            {{/if}}

            {{#if resume.awards}}
            <h4 id="awards"><span class="title">Awards</span></h4>
            <ul class="list-unstyled">
              {{#each resume.awards}}
                <li class="card-nested">
                  <div class="content has-sidebar">
                    <p class="clear-margin-sm" itemprop="award">
                      <strong>{{title}}</strong>,&nbsp;
                      {{awarder}}
                    </p>
                    <p class="text-muted clear-margin-sm">
                      <small> {{date}} </small>
                    </p>
                    {{#if summary}}<p> {{summary}} </p>{{/if}}
                  </div>
                </li>
              {{/each}}
            </ul>
            {{/if}}

            {{#if resume.volunteer}}
            <h4 id="volunteer-work"><span class="title">Volunteer Work</span> </h4>
            <ul class="list-unstyled">
              {{#each resume.volunteer}}
                <li class="card-nested">
                  <div class="content has-sidebar">
                    <p class="clear-margin-sm">
                      <strong>{{position}}</strong>,&nbsp;
                      {{organization}}
                    </p>
                    <p class="text-muted">
                      <small>
                        {{startDate}} - {{#if endDate}} {{endDate}} {{else}} {{locales.present}} {{/if}}
                      </small>
                    </p>
                    <p>{{summary}}</p>
                    <ul>
                      {{#each highlights}}
                        <li> {{.}} </li>
                      {{/each}}
                    </ul>
                  </div>
                </li>
              {{/each}}
            </ul>
            {{/if}}

            {{#if resume.interests}}
            <h4 id="interests"><span class="title">Interests</span> </h4>
            <ul class="list-unstyled">
              {{#each resume.interests}}
                <li class="card-nested">
                  <p>
                    <strong>{{name}}</strong>
                  </p>

                  <div class="space-top labels">
                    {{#locales}}
                      <span class="label label-keyword">{{.}}</span>
                    {{/locales}}
                  </div>
                </li>
              {{/each}}
            </ul>
            {{/if}}

            {{#if resume.references}}
            <h4 id="references"><span class="title">References</span> </h4>
            <ul class="list-unstyled">
              {{#each resume.references}}
                <li class="card-nested">
                  <p>
                    <strong>{{name}}</strong>
                  </p>
                  <blockquote class="quote">
                    <p class="clear-margin">{{reference}}</p>
                  </blockquote>
                </li>
              {{/each}}
            </ul>
            {{/if}}

            <div style="text-align:center">
              <div class="detail no-print" style="font-size:1.5rem;margin-top:2rem;">
                <a href="https://resume.fenghan.link/resume.pdf" class="info" itemprop="pdf" target="_blank">
                  {{locales.pdfVersion}}
                </a>
              </div>
               <div class="detail print-only" style="font-size:1.5rem;margin-top:2rem;" >
                <a href="https://resume.fenghan.link" class="info" itemprop="pdf" target="_blank">
                  {{locales.onlineVersion}}
                </a>
              </div>
              <div style="opacity:0.7; font-size:1.2rem;margin-top:1rem;">{{locales.lastModified}}{{getBuildDate ''}}</div>
            </div>
          </div>
        </div>
      </section>
    </div>

    {{#if context.socketPort}}
    <script>
      const ws = new WebSocket(`ws://localhost:{{context.socketPort}}`)

      ws.addEventListener('message', (e) => {
        const needRefreshPages = JSON.parse(e.data)

        if (needRefreshPages.indexOf(location.href)) {
          location.reload()
        }
      })

      window.onclose(() => {
        ws.close()
      })
    </script>
    {{/if}}
  </body>
</html>
